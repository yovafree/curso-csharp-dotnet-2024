<h1>Lista de clientes</h1>

<a class="btn btn-primary" asp-action="Create" asp-controller="Clients">Crear Cliente</a>
<br>
<table class="table table-bordered table-striped">
    <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Acciones</th>
    </tr>
    @foreach (var client in ViewBag.Clients)
    {
        <tr>
            <td>@client.Name @client.LastName</td>
            <td>@client.Email</td>
            <td>
                <a class="btn btn-primary" asp-action="View" asp-controller="Clients" asp-route-id="@client.Id">Ver</a>
                <a class="btn btn-success" asp-action="Edit" asp-controller="Clients" asp-route-id="@client.Id">Editar</a>
                <a class="btn btn-danger" asp-action="Delete" asp-controller="Clients" asp-route-id="@client.Id">Eliminar</a>
            </td>
        </tr>
    }
</table>

<table class="table table-bordered table-striped">
    <tr>
        <th>Nombre</th>
        <th>Email</th>
    </tr>
    @foreach (var client in ViewData["Clients"] as List<Client>)
    {
        <tr>
            <td>@client.Name @client.LastName</td>
            <td>@client.Email</td>
        </tr>
    }
</table>